<section class="ratings" id="ratings">
    <div class="rating-head"
        style="position: relative; align-items: center; justify-content: center; display: flex; flex-direction: column; margin-bottom: 10px;">
        <h1
            style="color: rgb(79, 187, 219); margin-bottom: 10px; text-shadow: 2px 2px 3px rgb(80, 80, 80); font-family: 'Kalam', cursive;">
            RATINGS</h1>
        <span style="background: #ff0000; height: 2px; width: 80px; border: none;"></span>
    </div>
    <div class="container rating-body">

        <div class="row ratings-body-rows">
            <div class="col-lg-6 col-sm-12 ratings-body-column-1">
                <div class="rating-summary-header">
                    <h5>Reviews Summary</h5>
                    <span style="background: #ffe600; height: 2px; width: 50px; margin: 5px; border: none;"></span>
                </div>

                <div class="rating-summary-body">

                    <div class="progress-div">
                        <div class="progress-group">
                            <span>5</span>
                            <div class="progress progression">
                                <div class="progress-bar progress_bar" role="progressbar" style="width: 100%"
                                    aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                        <div class="progress-group">
                            <span>4</span>
                            <div class="progress progression">
                                <div class="progress-bar progress_bar" role="progressbar" style="width: 75%"
                                    aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                        <div class="progress-group">
                            <span>3</span>
                            <div class="progress progression">
                                <div class="progress-bar progress_bar" role="progressbar" style="width: 50%"
                                    aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                        <div class="progress-group">
                            <span>2</span>
                            <div class="progress progression">
                                <div class="progress-bar progress_bar" role="progressbar" style="width: 25%"
                                    aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                        <div class="progress-group">
                            <span>1</span>
                            <div class="progress progression">
                                <div class="progress-bar progress_bar" role="progressbar" style="width: 3%"
                                    aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>


                    </div>
                    <div class="rating-avg" id="rating-avg">
                        <h4>4.2</h4>
                    </div>
                </div>

            </div>

            <div class="col-lg-6 col-sm-12 ratings-body-column-2">
                <div class="rate-us-header">
                    <h5>Rate your experience</h5>
                    <span style="background: #ffe600; height: 2px; width: 50px; margin: 5px; border: none;"></span>
                </div>
                <div class="star-widget stars">
                    <input type="number" name="rating" hidden>
                    <i class='fa fa-star star' style="--i: 0;"></i>
                    <i class='fa fa-star star' style="--i: 1;"></i>
                    <i class='fa fa-star star' style="--i: 2;"></i>
                    <i class='fa fa-star star' style="--i: 3;"></i>
                    <i class='fa fa-star star' style="--i: 4;"></i>
                </div>
                <form action="#" name="form-1" class="form-1">
                    <header class="form-header"></header>
                    <div class="textarea">
                        <textarea name="describe" id="describe" cols="50"
                            placeholder="Describe your experience..."></textarea>
                    </div>
                    <div class="post-btn">
                        <input type="button" value="POST" id="post" placeholder="POST">
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>


