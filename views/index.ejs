<!-- ----------------------------------Sign up---------------------------------- -->


<div class="modal" id="signupModal" tabindex="-1" aria-labelledby="signupLabel" aria-hidden="true">
    <div class="modal-dialog form">
        <div class="modal-content form-content">
            <div class="modal-header">
                <h5 class="modal-title form-title" id="exampleModalLabel">Sign Up</h5>
                <button type="button" class="btn-close form-close" data-bs-dismiss="modal"
                    aria-label="Close"></button>
            </div>
            <div class="modal-body" style="display: flex; flex-direction: column;">
                <form action="#">
                    <div class="field input-field">
                        <input type="email" id="email" placeholder="Email" class="form-input">
                        <span class="email_warning" style="display: none; color: white;"></span>
                        <i class="fa fa-envelope email"></i>
                    </div>

                    <div class="field input-field">
                        <input type="password" id="password" placeholder="Create password" class="form-password">
                        <p class="password_condition" style="font-size: 10px; color: white;"></p>
                        <i class="fa fa-lock pw_lock"></i>
                        <i class="fa fa-eye-slash pw_hide"></i>
                    </div>

                    <div class="field input-field">
                        <input type="password" id="confirm_password" placeholder="Confirm password"
                            class="form-password">
                        <span class="confirm_pwd_warn"
                            style="display: none; color: white; font-weight: 500;"></span>
                        <i class="fa fa-lock pw_lock"></i>
                        <i class="fa fa-eye-slash pw_hide"></i>
                    </div>

                    <div class="field button-field">
                        <button id="signup1" onclick="Sign()">Signup</button>
                    </div>
                </form>
                <div class="form-link">
                    <span>Already have an account? <a href="#" class="link login-link" id="login">Login</a></span>
                </div>

                <div class="line"></div>

                <div class="media-options">
                    <a href="#" class="field google">
                        <img src="images/google_icon.png" alt="" width="30px" height="30px" class="google-icon">
                        <span>Login with Google</span>
                    </a>
                </div>
                <div class="media-options">
                    <a href="#" class="field facebook">
                        <i class='fa fa-facebook facebook-icon'></i>
                        <span>Login with Facebook</span>
                    </a>
                </div>


            </div>
            <div class="modal-footer" style="display: flex; flex-direction: column;">

            </div>
        </div>
    </div>
</div>


